<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>{{ title }}</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
    
    :root {
      --primary-brand: #1E40AF;
      --primary-light: #3B82F6;
      --secondary: #F59E0B;
      --success: #10B981;
      --warning: #F59E0B;
      --danger: #EF4444;
      
      --text-primary: #0F172A;
      --text-secondary: #475569;
      --text-muted: #64748B;
      --text-light: #94A3B8;
      
      --bg-primary: #FFFFFF;
      --bg-secondary: #F8FAFC;
      --bg-accent: #EFF6FF;
      --bg-surface: #F1F5F9;
      
      --border-light: #E2E8F0;
      --border-medium: #CBD5E1;
      --border-strong: #94A3B8;
      
      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
      --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      
      --radius-sm: 4px;
      --radius-md: 8px;
      --radius-lg: 12px;
      --radius-xl: 16px;
    }

    @page {
      size: A4;
      margin: 25mm 20mm 20mm;
      @bottom-right { 
        content: "Page " counter(page) " of " counter(pages); 
        color: var(--text-muted); 
        font-size: 9pt;
        font-weight: 400;
      }
      @bottom-left  { 
        content: "Generated by ReportDoc System • " attr(data-generated); 
        color: var(--text-muted); 
        font-size: 9pt;
        font-weight: 400;
      }
    }

    * {
      box-sizing: border-box;
    }

    html, body { 
      height: 100%; 
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      color: var(--text-primary);
      font-size: 11pt;
      line-height: 1.6;
      background: var(--bg-primary);
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* Header Section */
    .document-header {
      background: linear-gradient(135deg, var(--primary-brand) 0%, var(--primary-light) 100%);
      color: white;
      padding: 24pt 28pt;
      margin: -25mm -20mm 0;
      margin-bottom: 20pt;
      position: relative;
      overflow: hidden;
    }

    .document-header::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 200px;
      height: 200px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      transform: translate(50%, -50%);
    }

    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      position: relative;
      z-index: 1;
    }

    .title-section h1 {
      font-size: 24pt;
      font-weight: 700;
      margin: 0 0 8pt 0;
      letter-spacing: -0.5px;
      line-height: 1.2;
    }

    .status-badges {
      display: flex;
      gap: 8pt;
      margin-top: 8pt;
    }

    .status-badge {
      padding: 4pt 12pt;
      border-radius: var(--radius-lg);
      font-size: 9pt;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(10px);
    }

    .status-badge.automated {
      background: rgba(16, 185, 129, 0.2);
      color: #D1FAE5;
    }

    .status-badge.manual {
      background: rgba(245, 158, 11, 0.2);
      color: #FEF3C7;
    }

    .meta-grid {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 6pt 16pt;
      font-size: 10pt;
      min-width: 280pt;
    }

    .meta-label {
      font-weight: 600;
      opacity: 0.9;
    }

    .meta-value {
      opacity: 0.95;
    }

    /* Content Sections */
    .content-wrapper {
      padding: 0 4pt;
    }

    .section {
      margin-bottom: 20pt;
      background: var(--bg-primary);
      border-radius: var(--radius-lg);
      overflow: hidden;
    }

    .section-header {
      background: var(--bg-accent);
      border-bottom: 2px solid var(--primary-light);
      padding: 12pt 20pt;
      margin: 0;
    }

    .section-title {
      font-size: 14pt;
      font-weight: 600;
      color: var(--primary-brand);
      margin: 0;
      display: flex;
      align-items: center;
      gap: 8pt;
    }

    .section-title::before {
      content: '';
      width: 4pt;
      height: 16pt;
      background: var(--primary-light);
      border-radius: 2pt;
    }

    .section-content {
      padding: 16pt 20pt;
    }

    /* Description Section */
    .description-text {
      font-size: 12pt;
      line-height: 1.7;
      color: var(--text-primary);
      margin: 0;
    }

    /* Grid Layout */
    .grid-layout {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20pt;
      margin-bottom: 20pt;
    }

    /* Platform and Tools */
    .tag-container {
      display: flex;
      flex-wrap: wrap;
      gap: 6pt;
      margin-top: 8pt;
    }

    .platform-tag, .tool-tag {
      display: inline-flex;
      align-items: center;
      padding: 6pt 12pt;
      border-radius: var(--radius-md);
      font-size: 9pt;
      font-weight: 500;
      border: 1.5px solid;
    }

    .platform-tag {
      background: #EFF6FF;
      border-color: #BFDBFE;
      color: var(--primary-brand);
    }

    .tool-tag {
      background: #F0FDF4;
      border-color: #BBF7D0;
      color: #166534;
    }

    .empty-state {
      color: var(--text-muted);
      font-style: italic;
      font-size: 10pt;
    }

    /* Enhanced Tables */
    .data-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      font-size: 10pt;
      border-radius: var(--radius-lg);
      overflow: hidden;
      box-shadow: var(--shadow-sm);
      border: 1px solid var(--border-light);
    }

    .data-table thead th {
      background: linear-gradient(135deg, var(--bg-surface) 0%, var(--bg-secondary) 100%);
      color: var(--text-primary);
      font-weight: 600;
      padding: 12pt 16pt;
      text-align: left;
      border-bottom: 2px solid var(--border-medium);
      font-size: 9pt;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .data-table tbody td {
      padding: 12pt 16pt;
      border-bottom: 1px solid var(--border-light);
      vertical-align: middle;
    }

    .data-table tbody tr:last-child td {
      border-bottom: none;
    }

    .data-table tbody tr:hover {
      background: var(--bg-accent);
    }

    .link-cell {
      word-break: break-all;
      max-width: 200pt;
    }

    .link-cell a {
      color: var(--primary-light);
      text-decoration: none;
      font-weight: 500;
    }

    .link-cell a:hover {
      text-decoration: underline;
    }

    .type-badge {
      padding: 3pt 8pt;
      border-radius: var(--radius-sm);
      font-size: 8pt;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .type-badge.sheet {
      background: #FEF3C7;
      color: #92400E;
    }

    .type-badge.report {
      background: #E0E7FF;
      color: #3730A3;
    }

    .type-badge.bigquery {
      background: #F3E8FF;
      color: #6B21A8;
    }

    /* Lists */
    .adjustment-list {
      margin: 8pt 0 0 0;
      padding-left: 0;
      list-style: none;
    }

    .adjustment-list li {
      padding: 8pt 0;
      padding-left: 24pt;
      position: relative;
      border-bottom: 1px solid var(--border-light);
      font-size: 10.5pt;
    }

    .adjustment-list li:last-child {
      border-bottom: none;
    }

    .adjustment-list li::before {
      content: '→';
      position: absolute;
      left: 0;
      color: var(--warning);
      font-weight: 600;
      font-size: 12pt;
    }

    /* Callout/Notes */
    .callout-box {
      background: linear-gradient(135deg, #FEF7CD 0%, #FEF3C7 100%);
      border: 1px solid #F59E0B;
      border-left: 4pt solid var(--warning);
      border-radius: var(--radius-lg);
      padding: 16pt 20pt;
      position: relative;
      margin: 8pt 0;
    }

    .callout-box::before {
      content: 'ℹ';
      position: absolute;
      top: 16pt;
      left: 16pt;
      width: 20pt;
      height: 20pt;
      background: var(--warning);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 11pt;
      font-weight: 600;
    }

    .callout-content {
      padding-left: 32pt;
      color: #92400E;
      font-size: 10.5pt;
      margin: 0;
    }

    /* Changelog Table */
    .changelog-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      border-radius: var(--radius-lg);
      overflow: hidden;
      border: 1px solid var(--border-light);
    }

    .changelog-table thead th {
      background: var(--bg-surface);
      color: var(--text-primary);
      font-weight: 600;
      padding: 10pt 16pt;
      border-bottom: 2px solid var(--border-medium);
      font-size: 9pt;
    }

    .changelog-table tbody td {
      padding: 10pt 16pt;
      border-bottom: 1px solid var(--border-light);
      font-size: 10pt;
    }

    .changelog-date {
      font-weight: 600;
      color: var(--primary-brand);
      white-space: nowrap;
      width: 100pt;
    }

    /* Footer */
    .document-footer {
      margin-top: 24pt;
      padding-top: 16pt;
      border-top: 2px solid var(--border-light);
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 9pt;
      color: var(--text-muted);
    }

    .footer-left {
      display: flex;
      align-items: center;
      gap: 8pt;
    }

    .footer-logo {
      width: 16pt;
      height: 16pt;
      background: var(--primary-brand);
      border-radius: var(--radius-sm);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 600;
      font-size: 8pt;
    }

    /* Responsive adjustments for print */
    @media print {
      .section {
        break-inside: avoid;
        page-break-inside: avoid;
      }
      
      .grid-layout {
        break-inside: avoid;
      }
      
      .data-table {
        break-inside: avoid;
      }
    }
  </style>
</head>
<body data-generated="{{ generated_at }}">
  <header class="document-header">
    <div class="header-content">
      <div class="title-section">
        <h1>{{ title }}</h1>
        <div class="status-badges">
          <span class="status-badge">{{ frequency }}</span>
          {% if automated %}
            <span class="status-badge automated">Automated</span>
          {% else %}
            <span class="status-badge manual">Manual</span>
          {% endif %}
        </div>
      </div>
      <div class="meta-grid">
        <div class="meta-label">Media Team</div>
        <div class="meta-value">{{ media_team }}</div>
        <div class="meta-label">Owner</div>
        <div class="meta-value">{{ owner.name }} • {{ owner.email }}</div>
        {% if version %}
        <div class="meta-label">Version</div>
        <div class="meta-value">{{ version }}</div>
        {% endif %}
      </div>
    </div>
  </header>

  <div class="content-wrapper">
    <!-- Description Section -->
    <section class="section">
      <div class="section-header">
        <h2 class="section-title">Report Overview</h2>
      </div>
      <div class="section-content">
        <p class="description-text">{{ description }}</p>
      </div>
    </section>

    <!-- Platform and Tools Grid -->
    <div class="grid-layout">
      <section class="section">
        <div class="section-header">
          <h2 class="section-title">Platforms</h2>
        </div>
        <div class="section-content">
          {% if platforms %}
            <div class="tag-container">
              {% for platform in platforms %}
                <span class="platform-tag">{{ platform|title }}</span>
              {% endfor %}
            </div>
          {% else %}
            <p class="empty-state">No platforms specified</p>
          {% endif %}
        </div>
      </section>

      <section class="section">
        <div class="section-header">
          <h2 class="section-title">Tools & Technologies</h2>
        </div>
        <div class="section-content">
          {% if tools %}
            <div class="tag-container">
              {% for tool in tools %}
                <span class="tool-tag">{{ tool|title }}</span>
              {% endfor %}
            </div>
          {% else %}
            <p class="empty-state">No tools specified</p>
          {% endif %}
        </div>
      </section>
    </div>

    <!-- Links Section -->
    <section class="section">
      <div class="section-header">
        <h2 class="section-title">Resources & Links</h2>
      </div>
      <div class="section-content">
        <table class="data-table">
          <thead>
            <tr>
              <th>Type</th>
              <th>Description</th>
              <th>URL</th>
            </tr>
          </thead>
          <tbody>
            {% if google_sheets %}
              {% for sheet in google_sheets %}
                <tr>
                  <td><span class="type-badge sheet">Google Sheet</span></td>
                  <td>{{ sheet.subtitle }}</td>
                  <td class="link-cell"><a href="{{ sheet.url }}" target="_blank">{{ sheet.url }}</a></td>
                </tr>
              {% endfor %}
            {% endif %}
            <tr>
              <td><span class="type-badge report">Report</span></td>
              <td>Main Dashboard</td>
              <td class="link-cell"><a href="{{ report_link }}" target="_blank">{{ report_link }}</a></td>
            </tr>
            {% if automated and bigquery_link %}
              <tr>
                <td><span class="type-badge bigquery">BigQuery</span></td>
                <td>Data Source</td>
                <td class="link-cell"><a href="{{ bigquery_link }}" target="_blank">{{ bigquery_link }}</a></td>
              </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
    </section>

    <!-- Adjustments Section -->
    <section class="section">
      <div class="section-header">
        <h2 class="section-title">Required Adjustments</h2>
      </div>
      <div class="section-content">
        {% if adjustments %}
          <ul class="adjustment-list">
            {% for adjustment in adjustments %}
              <li>{{ adjustment }}</li>
            {% endfor %}
          </ul>
        {% else %}
          <p class="empty-state">No adjustments required at this time</p>
        {% endif %}
      </div>
    </section>

    <!-- Notes Section -->
    <section class="section">
      <div class="section-header">
        <h2 class="section-title">Notes & FAQ</h2>
      </div>
      <div class="section-content">
        <div class="callout-box">
          <div class="callout-content">
            {{ notes or ("For access issues or questions, please contact " + owner.email) }}
          </div>
        </div>
      </div>
    </section>

    <!-- Changelog Section -->
    {% if changelog %}
    <section class="section">
      <div class="section-header">
        <h2 class="section-title">Change History</h2>
      </div>
      <div class="section-content">
        <table class="changelog-table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Change Description</th>
            </tr>
          </thead>
          <tbody>
            {% for change in changelog %}
              <tr>
                <td class="changelog-date">{{ change.date }}</td>
                <td>{{ change.change }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </section>
    {% endif %}

    <!-- Footer -->
    <footer class="document-footer">
      <div class="footer-left">
        <div class="footer-logo">R</div>
        <span>Generated by ReportDoc System{% if version %} v{{ version }}{% endif %}</span>
      </div>
      <span>{{ generated_at }}</span>
    </footer>
  </div>
</body>
</html>